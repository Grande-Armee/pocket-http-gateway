{
  "name": "@grande-armee/pocket-http-gateway",
  "version": "0.1.0",
  "description": "Pocket HTTP gateway",
  "author": "Grande Armee",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "prepare": "husky install",
    "format": "prettier",
    "format:fix": "npm run format -- --write",
    "format:project": "npm run format -- \"src/**/*.ts\"",
    "format:project:fix": "npm run format:project -- --write",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --exec 'node --inspect-brk=0.0.0.0:9229' --watch",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:project": "npm run lint -- \"src/**/*.ts\"",
    "lint:project:fix": "npm run lint:project -- --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:unit": "npm run test --config tests-unit.config.js",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:unit:cov": "npm run test:unit -- --coverage",
    "test:integration": "npm run test -- --config tests-integration.config.js",
    "test:integration:watch": "npm run test:integration -- --watchAll",
    "test:integration:cov": "npm run test:integration -- --coverage"
  },
  "dependencies": {
    "@grande-armee/pocket-common": "^1.5.2",
    "@nestjs/common": "^8.2.2",
    "@nestjs/core": "^8.2.2",
    "@nestjs/microservices": "^8.2.2",
    "@nestjs/platform-fastify": "^8.2.2",
    "@nestjs/swagger": "^5.1.5",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "fastify-helmet": "^5.3.2",
    "fastify-swagger": "^4.12.6",
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "tslib": "^2.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@grande-armee/pocket-style-guide": "^2.1.0",
    "@nestjs/cli": "^8.1.5",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.2",
    "@types/jest": "^27.0.3",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.11.9",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.3",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.2"
  }
}
